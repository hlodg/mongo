const {model}=require('mongoose');

const user = new mongoose.Schema ({
    username: {
        type: STRING,
        require: true,
        unique: true,
        trim: true
    },
    email: {
        type: STRING,
        require: true,
        unique: true        
    },
    thoughts: {
        // foreign key referencing id of thought model
    },
    friends: {
        // foreign key reference user model
    }

})

